{
  "name": "@terra-money/warp-sdk",
  "repository": {
    "type": "git",
    "url": "https://github.com/terra-money/warp-sdk.git"
  },
  "description": "Sdk for interacting with Warp protocol on Terra.",
  "main": "dist/index.js",
  "browser": "dist/index.browser.js",
  "publishConfig": {
    "access": "public"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/terra-money/warp-sdk/issues"
  },
  "homepage": "https://github.com/terra-money/warp-sdk#readme",
  "version": "0.1.32",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn build:node && yarn build:browser",
    "build:node": "node build.js && tsc",
    "build:browser": "BUILD_TARGET=browser node build.js",
    "start": "yarn bot-terra",
    "bot-terra": "esbuild src/bot.terra.ts --bundle --platform=node --outdir=dist --outbase=src --external:jsonpath && node ./dist/bot.terra.js",
    "bot-injective": "esbuild src/bot.injective.ts --bundle --platform=node --outdir=dist --outbase=src --external:jsonpath && node ./dist/bot.injective.js",
    "format": "prettier --write \"src/**/*.{js,ts,tsx}\"",
    "generate-types": "node --experimental-specifier-resolution=node --loader ts-node/esm ./scripts/generate-types.js warp-protocol",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "lint-staged": {
    "./src/{**/*,*}.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "generate-types": {
    "contracts": [
      "warp-controller",
      "warp-account",
      "warp-resolver"
    ],
    "output": "src/types/contracts"
  },
  "dependencies": {
    "@terra-money/feather.js": "^1.0.10",
    "@types/jsonpath": "^0.2.0",
    "@types/node": "^16.11.56",
    "axios": "^1.1.2",
    "big.js": "^6.2.1",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.1",
    "jsonpath": "^1.1.1",
    "lodash": "^4.17.21",
    "pino": "^8.4.2",
    "typescript": "^4.8.2"
  },
  "devDependencies": {
    "@chialab/esbuild-plugin-require-resolve": "^0.17.1",
    "@types/big.js": "^6.1.6",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.191",
    "esbuild": "^0.14.54",
    "esbuild-node-externals": "^1.6.0",
    "husky": "^8.0.2",
    "jest": "^29.5.0",
    "json-schema-to-typescript": "^11.0.2",
    "lint-staged": "^13.0.4",
    "pinst": "^3.0.0",
    "prettier": "^2.8.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0"
  }
}
